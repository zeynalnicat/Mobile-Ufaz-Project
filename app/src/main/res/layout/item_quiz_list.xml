<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/quizGreen"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="16dp"
    android:layout_height="150dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtQuizName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Quiz #1"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="5 questions "
            android:textColor="@color/txtColor"
            app:layout_constraintStart_toStartOf="@+id/txtQuizName"
            app:layout_constraintTop_toBottomOf="@+id/txtQuizName" />

        <TextView
            android:id="@+id/txtPlaylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist name"
            android:maxLines="1"
            android:textColor="@color/white"
            style="@style/BoldText"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtQuizName"
            app:layout_constraintTop_toBottomOf="@+id/txtCount" />

        <TextView
            android:id="@+id/txtCompletion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Not attented"
            android:textColor="@color/primary"
            app:layout_constraintBottom_toBottomOf="@+id/txtQuizName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtQuizName" />

        <TextView
            android:id="@+id/txtWrong"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong:"
            android:textSize="12sp"
            android:layout_marginTop="-10dp"
            app:layout_constraintHorizontal_bias="0.7"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPlaylistName" />

        <TextView
            android:id="@+id/txtNumberWrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0"
            android:textSize="12sp"
            style="@style/BoldText"
            android:textColor="@color/red"
            app:layout_constraintStart_toEndOf="@+id/txtWrong"
            app:layout_constraintTop_toTopOf="@+id/txtWrong" />

        <TextView
            android:id="@+id/txtCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Correct:"
            android:textSize="12sp"
            android:textColor="@color/spotifyGreen"
            style="@style/BoldText"
            app:layout_constraintStart_toEndOf="@+id/txtNumberWrong"
            app:layout_constraintTop_toTopOf="@+id/txtWrong" />

        <TextView
            android:id="@+id/txtNumberCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@color/spotifyGreen"
            style="@style/BoldText"
            app:layout_constraintStart_toEndOf="@+id/txtCorrect"
            app:layout_constraintTop_toTopOf="@+id/txtCorrect" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>